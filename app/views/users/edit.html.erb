<div id="checkout_site">
<% title 'Edit My Account'%>

<%= form_for @user do |f| %>
  <%= f.error_messages %>
  <p>
  	<%= f.label :login, "Username" %><br />
	<%= f.text_field :login, :readonly => true %>
  </p>
  <p>
	<%= f.label :email %><br />
	<%= f.text_field :email %>
  </p>
  <p>
	<%= f.label :city %><br />
	<%= f.text_field :city %>
  </p>
  <p>
	<%= f.label :state %><br />
	<%= f.text_field :state %>
  </p>
  <p>
	<%= f.label :zip %><br />
	<%= f.text_field :zip %>
  </p>	
  <p>
  	<%= f.submit "Update" %>
  </p>
<% end %>

<br /><%= link_to "My Profile", user_path %>
</div>
