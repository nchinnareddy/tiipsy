<div id="checkout_site">
<% title 'Edit My Account'%>

<%= form_for @user do |f| %>
  <%= f.error_messages %>
  
  <table border="0" align="center">
  <tr>
    <td colspan="3"><h3 align="center" style="color:#48B9E9"> Modify your details. </h3></td>
  </tr>
  <tr>
    <td><div align="right" style="color:#FFFFFF"><%= f.label :email %></div></td>
    <td width="7"><strong style="color:#48B9E9">:</strong></td>
    <td><%= f.text_field :email, :class => "textfield_effect" %></td>
  </tr>
  <tr>
    <td width="40%"><div align="right" style="color:#FFFFFF"><%= f.label :first_name %></div></td>
    <td width="1%"><strong style="color:#48B9E9">:</strong></td>
    <td width="59%"><%= f.text_field :first_name, :class => "textfield_effect" %></td>
  </tr>
  <tr>
    <td width="40%"><div align="right" style="color:#FFFFFF"><%= f.label :last_name %></div></td>
    <td width="1%"><strong style="color:#48B9E9">:</strong></td>
    <td width="59%"><%= f.text_field :last_name, :class => "textfield_effect" %></td>
  </tr>
  <tr>
    <td><div align="right" style="color:#FFFFFF"><%= f.label :city %></div></td>
    <td width="7"><strong style="color:#48B9E9">:</strong></td>
    <td><%= f.select :city, options_for_select([
    														[@user.city, "0"],
    														
["Austin, TX ","Austin, TX "],
["Chicago, IL","Chicago, IL"],	 
["Dallas, TX","Dallas, TX"],	
["Houston, TX","Houston, TX"],	
["San Antonio, TX","San Antonio, TX"]  														
 	]), :style => "width:197px" %></td>
  </tr>
  <tr>
    <td></td>
    <td width="7"></td>
	<td><%= f.submit "Update" %></td>
  </tr>
</table>
  
  
