<table border="0" align="center" width="100%">
  <tr>
    <td colspan="3"><h3 align="center" style="color:#48B9E9"> Signup </h3></td>
  </tr>
  <tr>
    <td width="619"><div align="right" style="color:#FFFFFF"><%= form.label :email %></div></td>
    <td width="0"></td>
    <td width="694"><%= form.text_field :email %></td>
  </tr>
  <tr>
    <td><div align="right" style="color:#FFFFFF"><%= form.label :password, form.object.new_record? ? nil : "Change password" %></div></td>
    <td width="0"></td>
    <td><%= form.password_field :password %></td>
  </tr>
  <tr>
    <td><div align="right" style="color:#FFFFFF"><%= form.label :password_confirmation %> </div></td>
    <td width="0"></td>
    <td><%= form.password_field :password_confirmation %></td>
  </tr>
  <tr>
    <td><div align="right" style="color:#FFFFFF"><%= form.label :city %> </div></td>
    <td width="0"></td>
    <td>
    	<%= form.select :city, options_for_select([
    							["Select", "0"],							
								["Austin, TX ","Austin, TX "],
								["Chicago, IL","Chicago, IL"],	 
								["Dallas, TX","Dallas, TX"],	
								["Houston, TX","Houston, TX"],	
								["San Antonio, TX","San Antonio, TX"] 														
 							]), :style => "width:197px" 
 		%>
    </td>
  </tr>
  <tr>
    <td></td>
    <td width="0"></td>
	<td><%= form.submit "Sign Up" , :class => "links" %></td>
  </tr>
  <tr>
    <td align="right"><font style="color:#FFFFFF; font-size:15px">Not received activation mail</font></td>
    <td width="0"></td>
	<td><%= link_to "Click here", resend_activation_users_path, :class=>"activation_mail_popup"  %></td>
  </tr>
  <tr>
    <td colspan="3"><h3 align="center" style="color:#48B9E9">Sign in with</h3></td>
  </tr>
  <tr>
    <td colspan="3"  align="center">
    	<% ["twitter","facebook", "linked_in"].each do |provider| %>
  			<%= link_to image_tag("auth/#{provider}_64.png"), "/auth/#{provider}" %>
		<% end %>
		<%= link_to image_tag("auth/google_64.png"), "/auth/open_id?openid_url=https://www.google.com/accounts/o8/id" %>
	</td>
  </tr>
</table>



