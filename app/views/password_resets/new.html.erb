<div id="signup">
<% title 'Reset Password'%>

<%= form_tag password_resets_path do %>
<table width="100%" border="0">
  <tr>
    <td colspan="3"><h3 align="center" style="color:#48B9E9"> Please enter your email address below and then press "Reset Password".</h3></td>
    </tr>
  <tr>
    <td width="49%"><div align="right"><%= text_field_tag :email %> </div></td>
    <td width="1%"><strong style="color:#48B9E9">:</strong></td>
    <td width="50%"><%= submit_tag "Reset Password" %></td>
  </tr>
  <tr>
    <td colspan="3"></td>
    </tr>
</table>
<!--
  <%= text_field_tag :email %>
