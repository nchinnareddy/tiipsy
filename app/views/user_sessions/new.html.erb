<% title 'Sign In'%>
<% stylesheet('jquery.countdown', 'colorbox')%>
<% javascript('jquery.countdown', 'jquery.colorbox-min')%>


<div id='signup'>
  <%= form_for @user_session, :url => user_sessions_path do |f| %>
      <div id="signupcontainer">
        <div id="signupnew">
          <label>Email</label><br>
          <%= f.text_field :login, :class => "textfield_effect" %> <br>
          <label>Password</label><br>
          <%= f.password_field :password , :class => "textfield_effect"%><br>

          <%= f.check_box :remember_me %> <label>Remember Me</label><br>
          <%= f.submit "Sign In", :class=>"link_button" %>

          <%= link_to "Reset Password", new_password_reset_path , :class=>"link_button reset_password_popup" %><br>
          <% ["twitter","facebook", "linked_in"].each do |provider| %>
		      <%= link_to image_tag("auth/#{provider}_64.png"), "/auth/#{provider}" %>
          <% end %>
          <%= link_to image_tag("auth/google_64.png"), "/auth/open_id?openid_url=https://www.google.com/accounts/o8/id" %>
        </div>
      </div>
  <% end %>

</div>

<script type="text/javascript">
	//for reset password
	$('.reset_password_popup').colorbox();
</script>