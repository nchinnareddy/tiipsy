<% stylesheet('jquery.countdown', 'colorbox')%>
<% javascript('jquery.countdown', 'jquery.colorbox-min')%>


<div id='login'>
	<% title 'Sign In'%>

<%= form_for @user_session, :url => user_sessions_path do |f| %>
  <%= f.error_messages %>
  
  
<table border="0" align="center">
  <tr>
    <td colspan="3"><h3 align="center" style="color:#48B9E9"> Sign in with your SIPPOD Account</h3></td>
  </tr>
  <tr>
    <td width="358"><div align="right" style="color:#FFFFFF">Username OR Email </div></td>
    <td width="7"><strong style="color:#48B9E9">:</strong></td>
    <td width="371"><%= f.text_field :login %></td>
  </tr>
  <tr>
    <td><div align="right" style="color:#FFFFFF">Password </div></td>
    <td width="7"><strong style="color:#48B9E9">:</strong></td>
    <td><%= f.password_field :password %></td>
  </tr>
  <tr>
    <td><div align="right"><%= f.check_box :remember_me %></div></td>
    <td width="7"><strong style="color:#48B9E9">:</strong></td>
	<td><div align="left" style="color:#FFFFFF">Remember Me</div></td>
  </tr>
   <tr>
    <td><div align="right"><%= f.submit "Sign In" %></div></td>
    <td width="7"></td>
	<td><%= link_to "Reset Password", new_password_reset_path , :class=>"links reset_password_popup" %></td>
  </tr>
  <tr>
    <td colspan="3"><h3 align="center" style="color:#48B9E9">Sign in with</h3></td>
  </tr>
  <tr>
    <td colspan="3"  align="center">
    	<% ["twitter","facebook", "linked_in"].each do |provider| %>
  			<%= link_to image_tag("auth/#{provider}_64.png"), "/auth/#{provider}" %>
		<% end %>
		<%= link_to image_tag("auth/google_64.png"), "/auth/open_id?openid_url=https://www.google.com/accounts/o8/id" %>
	</td>
  </tr>
</table>

  
  
