<div id='login'>
	<% title 'Sign In'%>

<%= form_for @user_session, :url => user_sessions_path do |f| %>
  <%= f.error_messages %>
  
  
<table width="100%" border="0">
  <tr>
    <td colspan="3"><h3 align="left" style="color:#48B9E9"> Sign in with your SIPPOD Account</h3></td>
    </tr>
  <tr>
    <td width="13%"><div align="right" style="color:#FFFFFF">Username OR Email </div></td>
    <td width="1"><strong style="color:#48B9E9">:</strong></td>
    <td width="86%"><%= f.text_field :login %></td>
  </tr>
  <tr>
    <td><div align="right" style="color:#FFFFFF">Password </div></td>
    <td width="1%"><strong style="color:#48B9E9">:</strong></td>
    <td><%= f.password_field :password %></td>
  </tr>
  <tr>
    <td><div align="right"><%= f.check_box :remember_me %></div></td>
    <td width="1%"><strong style="color:#48B9E9">:</strong></td>
	<td><div align="left" style="color:#FFFFFF">Remember Me</div></td>
  </tr>
   <tr>
    <td><div align="right"><%= f.submit "Sign In" %></div></td>
    <td width="1%"></td>
	<td><%= link_to "Reset Password", new_password_reset_path , :class=>"links" %></td>
  </tr>
</table>


  
  
