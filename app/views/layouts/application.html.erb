<!DOCTYPE html>
<html>
  
   <head>
    <title><%= content_for?(:title) ? yield(:title) : "Get your bottle service now" %></title>
    <%= stylesheet_link_tag "/stylesheets/application.css" %>
	<%= stylesheet_link_tag "/javascripts/fancybox/jquery.fancybox-1.3.4.css"%>
    <%= javascript_include_tag :defaults %>
	<%= javascript_include_tag "/javascripts/fancybox/jquery.fancybox-1.3.4.pack.js", "/javascripts/fancybox/jquery.easing-1.3.pack.js", "/javascripts/fancybox/jquery.mousewheel-3.0.4.pack.js"%>
    <%= csrf_meta_tag %>
    <%= yield(:head) %>
  </head>
  
  
   <body>    
   	<%= render :partial => "layouts/header" %>
	
	<div id="container">
    <div style="float:right;border:1px solid #000000;padding:10px;"></div>
   	<% flash.each do |name, msg| %>
    <%= content_tag :div, msg, :id => "flash_#{name}" %>
    <% end %>
    <%= content_tag :h1, yield(:title) if show_title? %>
    <%= yield %>	
   	</div>
	  		
  	<%= render :partial => "layouts/footer"%>
	</body>
    
</html>
