<% javascript('jquery.countdown')%>
<% stylesheet('jquery.countdown')%>

<style type="text/css">
	.countdown_amount {
		font-size: 12px;
	}
</style>

<h1>Servicelistings</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Location</th>
    <th>Availability</th>
    <th>Price</th>
    <th>No of guests</th>
	<% if isadmin? %>
    <th>Status</th>
	<% end%>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @servicelistings.each do |servicelisting| %>
  <tr>
  	<% if servicelisting.status || isadmin? %>
	
    <td><%= servicelisting.title %></td>
    <td><%= servicelisting.description %></td>
    <td><%= servicelisting.location %></td>
    <td><%= servicelisting.availability %></td>
    <td><%= servicelisting.price %></td>
    <td><%= servicelisting.no_of_guests %></td>
	    <% if isadmin? %>
	<td><%= servicelisting.status %></td>
	    <% end%>
		
    <td><%= link_to 'Show', servicelisting %></td>
	
	
	<% if isadmin? %>
    <td><%= link_to 'Edit', edit_servicelisting_path(servicelisting) %></td>
    <td><%= link_to 'Destroy', servicelisting, :confirm => 'Are you sure?', :method => :delete %></td>              
	<%end%>
	<% @servicelisting = servicelisting%>
	<td><b> &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;  HighestBid:</b>$<%= @servicelisting.highestbid %></td>
	
	<td><b>&nbsp; </b><%= link_to 'Bid', new_servicelisting_bid_path(@servicelisting) %></td>
	
	<td><b>&nbsp; </b><%= link_to 'Buynow',  buynow_buynow_index_path(:id => @servicelisting) %></td>
	
	<td width="10%"> <div class="jdt" start="1000000"> </div></td>
	
	<% if current_user %>				
        <% @userhighbid = nil %> 
        <% @servicelisting.bids.each do |bid| %>
		 <% if bid.user_id == current_user.id %>
	         <% if @userhighbid.nil? %>
	          <% @userhighbid = bid.bidprice %>
	           <% next %>
	         <% end %>
	            <% if bid.user_id == current_user.id %> 
	               <% if @userhighbid < bid.bidprice %> 
	                <% @userhighbid = bid.bidprice %>
	               <%end %>
	            <%end %> 
		 <%end%> 
                                  <%end%>		 
      <% if !@userhighbid.nil? %> 	
       <% if @userhighbid == @servicelisting.highestbid %>
	     <td>"You are the highest bidder"</td>
		 <% else%>
		    <td> You are outbid by <%= @servicelisting.highestbid - @userhighbid %>$ </td>
	     <%end %>
	   <%else %>
	    <td>"You have not bid on this service"</td>
	  <%end%>	
		
   <% end %>
<%end %>	
  </tr>
<% end %>
</table>

<br />

<% if isadmin? %>
<%= link_to 'New Servicelisting', new_servicelisting_path %>
<%end%>


