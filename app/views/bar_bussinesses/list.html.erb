<% stylesheet('colorbox')%>
<% javascript('jquery.colorbox-min')%>


<div id=list>
  <table width="100%"  border="0" align="center" cellpadding="0" cellspacing="0">	
	<tr>
    	<td colspan="8"><h3 align="center" style="color:#48B9E9"><div style="background:#747016;
    			width: 40%;
    			padding:0.3em;
    			font: 0.9em Verdana, Arial, Helvetica, sans-serif;
    			-moz-border-radius: 15px;
    			-webkit-border-radius: 15px;
    			height:26px;">All bar Bussinesses</div> </h3>
    	</td>
    </tr>	  
	<tr bgcolor="#000000" class="BoldRED">
        <td width="4%" height="25" bgcolor="#DDDDDD" class="headtext13" style="border-bottom:#666666 1px solid;border-right:#666666 solid 1px;border-left:#666666 1px solid;"><div align="left" class="style22">
        	<div align="center"><span style="font-size:12px; font-family:Arial, Helvetica, sans-serif;">Sl. No.</span></div></div>
        </td>
        <td width="10%" height="25" bgcolor="#DDDDDD" class="headtext13" style="border-bottom:#666666 1px solid;border-right:#666666 solid 1px;"><div align="left" class="style22">
             <div align="center"><span style="font-size:12px; font-family:Arial, Helvetica, sans-serif;">Bar Name</span></div></div>
        </td>
        <td width="10%" height="25" bgcolor="#DDDDDD" class="headtext13" style="border-bottom:#666666 1px solid;border-right:#666666 solid 1px;"><div align="left" class="style22">
             <div align="center"><span style="font-size:12px; font-family:Arial, Helvetica, sans-serif;">Person of contact</span></div></div>
        </td>
        <td width="10%" height="25" bgcolor="#DDDDDD" class="headtext13" style="border-bottom:#666666 1px solid;border-right:#666666 solid 1px;"><div align="left" class="style22">
             <div align="center"><span style="font-size:12px; font-family:Arial, Helvetica, sans-serif;">Phone</span></div></div>
        </td>
		<td width="10%" height="25" bgcolor="#DDDDDD" class="headtext13" style="border-bottom:#666666 1px solid;border-right:#666666 solid 1px;"><div align="left" class="style22">
             <div align="center"><span style="font-size:12px; font-family:Arial, Helvetica, sans-serif;">Margin</span></div></div>
        </td>
		<td width="10%" height="25" bgcolor="#DDDDDD" class="headtext13" style="border-bottom:#666666 1px solid;border-right:#666666 solid 1px;"><div align="left" class="style22">
             <div align="center"><span style="font-size:12px; font-family:Arial, Helvetica, sans-serif;">Margin Type</span></div></div>
        </td>
		<td width="10%" height="25" bgcolor="#DDDDDD" class="headtext13" style="border-bottom:#666666 1px solid;border-right:#666666 solid 1px;"><div align="left" class="style22">
             <div align="center"><span style="font-size:12px; font-family:Arial, Helvetica, sans-serif;">Action</span></div></div>
        </td>
        <td width="10%" height="25" bgcolor="#DDDDDD" class="headtext13" style="border-bottom:#666666 1px solid;border-right:#666666 solid 1px;"><div align="left" class="style22">
             <div align="center"><span style="font-size:12px; font-family:Arial, Helvetica, sans-serif;">Options</span></div></div>
        </td>
    </tr>            
	<% sl=1 %>
 	<% @bar_bussinesses.each do |bar_bussiness| %>
    <tr bgcolor="#FFFFFF" onMouseOver="this.bgColor='gold';" onMouseOut="this.bgColor='#FFFFFF';" >
          <td height="25" style="border-bottom:#666666 1px solid;border-left:#666666 1px solid;"><div align="center"><%= sl %><% sl+=1 %></div></td>
          <td style="border-bottom:#666666 1px solid"><div align="center"><%= bar_bussiness.name %></div></td>
          <td style="border-bottom:#666666 1px solid"><div align="center"><%= bar_bussiness.person_of_contact %></div></td>               
          <td  style="border-bottom:#666666 1px solid"><div align="center"><%= bar_bussiness.phone %></div></td>
	      <td style="border-bottom:#666666 1px solid"><div align="center"><%= bar_bussiness.margin %></div></td>
		  <td style="border-bottom:#666666 1px solid"><div align="center"><%= bar_bussiness.margin_type %></div></td>
		  <td style="border-bottom:#666666 1px solid"><div align="center"><%= link_to 'Action',  admin_bar_margin_path( :id=> bar_bussiness.id), :class => "action_margin"  %></div></td>
	      <td style="border-bottom:#666666 1px solid;border-right:#666666 1px solid"><div align="center"><%= link_to "Edit", edit_bar_bussiness_path(bar_bussiness.id, :indicator => "ed") %> | <%= link_to "Details",  bar_bussiness_path(bar_bussiness.id, :indicator => "sh") %> | <%= link_to "Delete", bar_bussiness, :confirm => 'Are you sure?', :method => :delete %></div></td>
    </tr>
	<% end %>
  </table>
</div>

<script type="text/javascript">
	$('.action_margin').colorbox();
</script>
