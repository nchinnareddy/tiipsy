<% javascript('simple-tabs','jquery.colorbox-min') %>
<% stylesheet('simple-tabs','colorbox') %>

<div id="signup">
	
	<ul class="simple-tabs">
		<li><%= link_to "Purchase Details","#tab1" %></li>
		<li><%= link_to "Bid Details","#tab2" %></li>
	</ul>
	<div class="tab_container">
		<div id="tab1" class="tab_content">
			<table width="75%"  border="0" align="center" cellpadding="0" cellspacing="0" style="margin:75px;">
				<tr>
    				<td colspan="6">
    					<h1 align="center" style="color:#48B9E9">
      					<div>Purchase Details </div> 
    					</h1>
					</td>
  				</tr>
				<% unless @purchase_details_of_service.nil? %>	
			  	<tr>
			  		<td>
						<label>Service</label>
						<p style="font-size:x-large; color:#1781C1;"><%= @purchase_details_of_service.servicelisting.title %></p>
			  			<label>Buyer Name</label>
						<p style="font-size:x-large; color:#1781C1;"><%= @purchase_details_of_service.user.first_name %></p>
						<label>Amount</label>
						<p style="font-size:x-large; color:#1781C1;"><%= @purchase_details_of_service.servicelisting.price %></p>
						<label>Status</label>
						<p style="font-size:x-large; color:#1781C1;"><%= @purchase_details_of_service.servicelisting.status %></p>
						<label>Date/Time</label>
						<p style="font-size:x-large; color:#1781C1;"><%= @purchase_details_of_service.created_at.strftime("%d-%m-%Y %H:%M %p") %></p>
					</td>
                </tr>
				<% else %>
				<tr>
					<td>
						<p style="font-size:x-large; color:#1781C1;">No, Purchase details</p>
					</td>	
				</tr>
				<% end %>
           </table>
		</div>
		
		
		<div id="tab2" class="tab_content">
			<table width="100%"  border="0" align="center" cellpadding="0" cellspacing="0">
			<tr>
    				<td colspan="6">
    					<h3 align="center" style="color:#48B9E9">
      					All Bids 
    					</h3>
					</td>
  			</tr>	
			<tr bgcolor="#000000" class="BoldRED">

                	<td width="5%" height="25" bgcolor="#DDDDDD" class="headtext13" style="border-bottom:#666666 1px solid;border-right:#666666 solid 1px;border-left:#666666 1px solid;"><div align="left" class="style22">
                  	<div align="center"><span style="font-size:12px; font-family:Arial, Helvetica, sans-serif;">Service</span></div>
                	</div></td>
					<td width="13%" height="25" bgcolor="#DDDDDD" class="headtext13" style="border-bottom:#666666 1px solid;border-right:#666666 solid 1px;border-left:#666666 1px solid;"><div align="left" class="style22">
                  	<div align="center"><span style="font-size:12px; font-family:Arial, Helvetica, sans-serif;">Name</span></div>
                	</div></td>
					<td width="13%" height="25" bgcolor="#DDDDDD" class="headtext13" style="border-bottom:#666666 1px solid;border-right:#666666 solid 1px;border-left:#666666 1px solid;"><div align="left" class="style22">
                  	<div align="center"><span style="font-size:12px; font-family:Arial, Helvetica, sans-serif;">Bid amount</span></div>
                	</div></td>
                	<td width="10%" height="25" bgcolor="#DDDDDD" class="headtext13" style="border-bottom:#666666 1px solid;border-right:#666666 solid 1px;"><div align="left" class="style22">
                  	<div align="center"><span style="font-size:12px; font-family:Arial, Helvetica, sans-serif;">Status</span></div>                  
                	</div></td>
			    	<td width="10%" height="25" bgcolor="#DDDDDD" class="headtext13" style="border-bottom:#666666 1px solid;border-right:#666666 solid 1px;"><div align="left" class="style22">
			      	<div align="center"><span style="font-size:12px; font-family:Arial, Helvetica, sans-serif;">Date/Time of Bid</span></div>
			    	</div></td>
			</tr>
			<% sl=1 %>
			<% if @bid_details_of_service.length > 0 %>
			<% @bid_details_of_service.each do |bid_details| %>	
     		<tr bgcolor="#FFFFFF" onMouseOver="this.bgColor='#3399cc';" onMouseOut="this.bgColor='#FFFFFF';" >
                		<td height="25" style="border-bottom:#666666 1px solid;border-left:#666666 1px solid;"><div align="center"><%= bid_details.servicelisting.title %></div></td>
                		<td style="border-bottom:#666666 1px solid"><div align="center"><%= bid_details.user.first_name %></div></td>
						<td style="border-bottom:#666666 1px solid"><div align="center"><%= bid_details.bidprice %></div></td>
                		<td style="border-bottom:#666666 1px solid"><div align="center"><%= bid_details.servicelisting.status %></div></td>
						<td style="border-bottom:#666666 1px solid;border-right:#666666 1px solid"><div align="center"><%= bid_details.created_at.strftime("%d-%m-%Y %H:%M %p") %></div></td>
              		</tr>
					<% end %>
			<% else%>
					<tr>
						<td colspan="6">
							<p align="center" style="font-size:x-large; color:#1781C1;">No , Bid details</p>
						</td>	
					</tr>
			<% end %>
			</table>
		</div		
	</div>
   </div>
</div>   