<div id="signup" style="width: 700px;">
 <br><br>	
 <p style="color:#FFFFFF" align="center"> Submitting this transaction, you are accepting all
   <%= link_to '"Terms & Conditions"', term_condition_users_path, :class=>'term_condition' %></p>
   	  
<% form_for @order do |f| %>
