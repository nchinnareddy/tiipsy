<% form_for @order do |f| %>
  <%= f.error_messages %>
  <% if @order.express_token.blank? %>
    ...
  <% else %>
	  <%= f.hidden_field :express_token %>
	  <%= f.hidden_field :amount, :value => @service.buynow_price %>
	  <b>Your order details</b></br>	 
	  <p>Service: <%= @service.title %></p></br>
	  <p>Available on:<%= @service.availability%></p></br>
	  <p>Amount: $<%= @service.buynow_price %></p></br>
	    
  <% end %>
      <p><%= f.submit "Complete Order" %></p>
<% end %>
