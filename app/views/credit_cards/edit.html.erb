    [ "West Virginia", "WV" ],
    [ "Wisconsin", "WI" ],
    [ "Wyoming", "WY" ] 												  
	      ])
	 %>
	</td>
  </tr>
  <tr>
    <td><div align="right" style="color:#FFFFFF">Zip</div></td>
    <td width="1%"><strong style="color:#48B9E9">:</strong></td>
    <td><%= f.text_field :zip , :class => "textfield_effect"%></td>
  </tr>
  <tr>
    <td></td>
    <td></td>
    <td><%= f.submit "Submit" %></td>
  </tr>
</table>
<% end %>
</div>